#!/bin/bash
export SYSTEMD_COLORS=0
# --quit-if-one-screen --quit-on-intr --no-init
export SYSTEMD_LESS=FKX
rsc() {
    local args=( "$@" )

    if (( ! ${#args[@]} )); then
        args=( "$(hostname -f)" setup_dev )
    fi
    radia_run rsconf.sh "${args[@]:-}"
}

bivio() {
    echo 'do not run bivio commands as root' 1>&2
    return 1
}

: this will do nothing
true

