#!/bin/bash
#
# Usage: run [bash -l]
#
set -euo pipefail
# Needed to allow for empty commands (e.g. docker_registry), bash will complain
# if an variable is empty as unbound (set -u above)
image_cmd=( 'docker.io/library/registry:2' )
user=root
if (( $# > 0 )); then
    # No name if called on the command line; called from command line so default log driver
    flags=( -i )
    if [[ -t 0 ]]; then
        # probably interactive debugging so allow strace
        flags+=( -t --cap-add SYS_PTRACE )
    fi
    cmd=(  )
    if [[ ${cmd[@]} ]]; then
        image_cmd+=( "${cmd[@]}" )
    fi
    image_cmd+=( "$@" )
    if [[ ${start_run_u:=} ]]; then
        user=$start_run_u
    fi
else
    # Systemd logs output to journal so we don't need docker to log, too.
    # No core dumps in daemons
    flags=( --name 'docker_registry' --log-driver=none --ulimit core=0 )
    image_cmd+=(  )
fi
# --init runs tini wrapper: https://github.com/krallin/tini
exec docker run "${flags[@]}" --init --rm "--user=$user" --network=host -v '/srv/docker_registry:/srv/docker_registry' -v '/srv/docker_registry/config.yml:/etc/docker/registry/config.yml'  "${image_cmd[@]}"
